<section>
	<div id="contenido" class="container">
		<form role="form" action="/user/create" method="POST" class="form-center" id="sign-up-form">
			<input type="hidden" name="_csrf" value="<%= _csrf %>">
			<h2 class="form-signin-heading"><%= __('Create user') %></h2>
			<div class="form-group">
				<label for="username"><%= __('Username') %></label>
				<input type="text" class="form-control" placeholder="<%= __('Username') %>" name="username" id="username" required<% if( session.tempUser && session.tempUser.username ) { %> value="<%= session.tempUser.username %>"<% } %>/>
			</div>
			<div class="form-group">
				<label for="email"><%= __('Email') %></label>
				<input type="email" class="form-control" placeholder="<%= __('someone@somewhere.com') %>" name="email" id="email" required<% if( session.tempUser && session.tempUser.email) { %> value="<%= session.tempUser.email %>"<% } %>/>
			</div>
			<div class="form-group">
				<label for="password"><%= __('Password') %></label>
				<input type="password" class="form-control" placeholder="<%= __('Password') %>" name="password" id="password" required minlength="6" />
			</div>
			<p>
				<input type="submit" class="btn btn-primary btn-block" value="<%= __('Create user') %>" />
			</p>
		</form>
		<div class="form-center">
			<p class="text-center">
				<%= __('Already registered?') %> <a href="/user/auth"><%= __('Sign In') %></a>
			</p>
		</div>
	</div>
</section>
<script>
	var miubicacion = new Array();
	function showPosition(position) {
		var lat = position.coords.latitude;
		var lng = position.coords.longitude;
		miubicacion[0]=lat.toFixed(3);
		miubicacion[1]=lng.toFixed(3);
	}
			
	function onError() {
		if (navigator.geolocation) {
			//
		} else {
			console.log("Error: Your browser doesn't support geolocation. Are you in Siberia?");
		}
	}
	if (navigator.geolocation) {
		navigator.geolocation.getCurrentPosition(showPosition, onError);
		setTimeout(function() { 
			console.log(miubicacion);
			$("#sign-up-form").append('<input type="hidden" id="geo" name="geo" value="'+miubicacion+'">');
		}, 5000);
	 } else {
		onError();
	 }

</script>