<%
if ( typeof posts === 'undefined' ) {
// There are only one user.
%>

<!-- perfil-->
<section id="perfil">
<div class="row">
  <div class="col-md-8">
    <div id="anuncio">
  	<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  	<!-- findby-responsive -->
  	<ins class="adsbygoogle"
  	     style="display:block"
  	     data-ad-client="ca-pub-3074485176185204"
  	     data-ad-slot="7849882013"
  	     data-ad-format="auto"></ins>
  	<script>
  	(adsbygoogle = window.adsbygoogle || []).push({});
  	</script>
    </div>

    <% if ( post.photos=== 'undefined' ) { %>
  	<div id="anuncio">
  		<img src="<%=post.photos%>" alt="<%= post.title %>">
  	</div>
    <% } %>

    <div id="descripcion">
    	<h3><%= post.title %></h3>
      <p>
        <% if ( post.summary=== 'undefined' ) { %>
        <em><%= post.summary %></em>.
        <% } %>
        Publicado por <a href="/user/<%= post.patron_id %>"><%= post.publisher %></a>
      </p>
      <p>
        <i class="glyphicon glyphicon-heart"></i>   <span> 5 </span>
        <i class="glyphicon glyphicon-search"></i>  <span> 7 </span>
        <i class="glyphicon glyphicon-star"></i>    <span> 2 </span>
        <i class="glyphicon glyphicon-flag"></i>    <span> 20 </span>
      </p>
      <p><%= post.text %></p>          
      <p class="text-right">
          <p>
              <i class="icon-tags"></i> Tags: 
<% var str = post.title; var arr = str.split(' '); for(var i=0;i<arr.length;i++) { %>
<a class="tagsbypost" href="post/tags/<%= arr[i] %>"><%= arr[i] %></a><% } %>
          </p>
      </p>
      <p>
      	Reference: <%= post.id %>.  
      	Permanent link: <a href="http://bit.ly/XXXXX">http://bit.ly/XXXXX</a>
      </p>
    </div>
    <!--discuss-->
    <div id="discuss">
      <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'findby'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    </div>

    <div id="anuncio">
    	<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    	<!-- findby-responsive -->
    	<ins class="adsbygoogle"
    	     style="display:block"
    	     data-ad-client="ca-pub-3074485176185204"
    	     data-ad-slot="7849882013"
    	     data-ad-format="auto"></ins>
    	<script>
    	(adsbygoogle = window.adsbygoogle || []).push({});
    	</script>
    </div>
  </div>

  <div class="col-md-4">
    <div id="contactar">
      <div class="gris">Make a question</div>
        <div class="glyph">
          <a href="tel:<%= post.phoneNumber %>"><i class="fa-phone-square"></i></a> Call
        </div>
        <div class="glyph">
          <a href="mailto:<%= post.contactMail %>"><i class="fa fa-envelope-o"></i></a> Escribir
        </div>
        <div class="glyph">
          <a href="#"><i class="fa-twitter-square"></i></a> Twitter
        </div>
        <div class="glyph">
          <a href="#"><i class="fa fa-facebook-square"></i></a> Facebook
        </div>
    </div>

    <div id="compartir">
      <div class="gris">Share</div>
      <div class="addthis_toolbox addthis_default_style addthis_32x32_style"><a class="addthis_button_preferred_1"></a><a class="addthis_button_preferred_2"></a><a class="addthis_button_preferred_3"></a><a class="addthis_button_preferred_4"></a><a class="addthis_button_compact"></a><a class="addthis_counter addthis_bubble_style"></a></div>
      <script>
        <var>addthis_config = {"data_track_addressbar":true};</var>
      </script>
      <script src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-51fbdcf40ea81860"></script>
    </div>
    <div id="compartir" class="text-center">
      <iframe src="http://rcm-na.amazon-adsystem.com/e/cm?t=loultimoenlaw-20&o=1&p=12&l=ur1&category=amazonhomepage&f=ifr" width="300" height="250" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>
    </div>
  </div>
</div>
</section>


<section class="vermas">
	<div>
		More posts from <a href="/related/<%= post.patron_id %>" class="azul"><%= post.publisher %></a>
	</div>
  <div>
    <iframe src="/post/related/<%= post.patron_id %>" frameborder="0" width="100%" height="300px" scrolling="no"></iframe>
  </div>    
</section>
