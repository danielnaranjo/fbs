    <div id="wrap">
      <div class="navbar-fixed-top">
        <header>
          <div id="logo"></div>
          <div id="busqueda"><i class="icon-search"></i></div>
          <div id="ubicacion"><i class="icon-location"></i></div>
          <div id="elmenu"><i class="icon-profile"></i></div>
          <div id="dondeestoy"></div>
          <div id="quiensoy">
            <i class="icon-user"></i> <% if( loggedUser ) { %><a href="/user/<%= loggedUser.id %>"><%= loggedUser.username %></a><% } %>
          </div>
        </header>
        <div id="buscador" class="row">
          <div id="lacaja" class="col-md-6">
            <form action="/post/search/">
              <div>
                <input type="type" id="term" name="term" placeholder="<%= __('Start your search here') %>" data-role="tagsinput" onchange="makeTags"/>
              </div>
              <div>  
                <input type="submit" value="Go" class="btn btn-default">
              </div>     
            </form>
          </div>
          <div id="popular" class="col-md-6">
            <ul>
              <li class="tag4'"><a href="#">Loading populars tags</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- content -->
      <%- body %>
      <!-- content -->      

      <footer id="footer" class="smooth-style slideOut-option navbar-fixed-bottom">
        <div class="container">
          <div>2013 &copy  <a href="http://www.danielnaranjo.info">Daniel Naranjo</a></div>
          <div><a href="#">Privacy</a> | <a href="#">Legal</a></div>
        </div>
      </footer>
    </div>

    <div id="opciones">
      <ul>
        <% if( loggedUser ) { %><li><a href="/user/<%= loggedUser.id %>"><%= __('My Profile') %></a></li><% } else { %>
        <li><a href="/user/new"><span class="glyphicon glyphicon-edit"></span> <%= __('Sign Up') %></a></li>
        <li><a href="/user/auth"><span class="glyphicon glyphicon-log-in"></span> <%= __('Log In') %></a></li>
      <% } %>        
        <% if( loggedUser ) { %><li><a href="/post/new"><%= __('Create a new post') %></a></li><% } else { %><li><a href="/post"><%= __('All Posts') %></a></li><% } %>
        <li><a href="/map/all"><%= __('Explorer')%></a></li>
        <li><a href="#"><%= __('About')%></a></li>
        <li><a href="#"><%= __('Faq')%></a></li>
        <li><a href="#"><%= __('Privacy')%></a></li>
        <li><a href="/about/contact"><%= __('Contact')%></a></li>
        <% if( loggedUser ) { %>
        <li>&nbsp;</li>
        <li><a href="/user/logout"><%= __('Sign Out')%> <span class="glyphicon glyphicon-log-out"></span></a></li><% } %>
      </ul>
    </div>

    <div id="nogeo"></div>

